#!/bin/sh

set -e

if [ ! -d ~/.homebrew ]
then
  git clone https://github.com/Homebrew/brew ~/.homebrew
  eval $(~/.homebrew/bin/brew shellenv)
fi

brew update
brew upgrade

brew tap thoughtbot/formulae

brew install \
    curl \
    elm-format \
    ghc \
    git \
    go \
    htop \
    neovim \
    node \
    ocaml \
    opam \
    pgformatter \
    python \
    rcm \
    ruby \
    terraform \
    tig \
    tmux \
    watch \
    zplug \
    zsh
