#!/bin/sh

set -e

if [ ! -d ~/.homebrew ]
then
  git clone https://github.com/Homebrew/brew ~/.homebrew
  eval $(~/.homebrew/bin/brew shellenv)
fi

brew update
brew upgrade

brew tap thoughtbot/formulae
brew install rcm

brew install \
    asdf curl elm-format ghc git git-lfs go haskell-stack htop neovim \
    node pgformatter python ruby tig tmux watch zplug zsh
