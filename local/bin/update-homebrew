#!/bin/sh

set -e

is_x86_64() {
  [ $(uname -m) = x86_64 ]
}

while getopts d option
do
  case $option in
  d)
    desktop=true
    ;;
  esac
done
shift $(expr $OPTIND - 1)

if [ ! -d ~/.linuxbrew ]
then
  git clone https://github.com/Linuxbrew/brew ~/.linuxbrew
fi

brew update
brew update

brew upgrade

if is_x86_64
then
  brew tap thoughtbot/formulae
  brew install rcm
fi

brew install \
    --without-docs --without-doxygen --without-icu4c --without-jemalloc \
    --without-libgit2 \
    asdf curl zsh git tmux htop tig \
    $(is_x86_64 && echo go) ruby python neovim node gawk \
    gnu-sed
    # ghc haskell-stack elm-format git-lfs

if [ -n "$desktop" ]
then
  brew tap homebrew/x11
  brew install feh mupdf
fi

brew cleanup
