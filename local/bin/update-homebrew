#!/bin/sh

set -e

if [ ! -d ~/.homebrew ]; then
  git clone https://github.com/Homebrew/brew ~/.homebrew
  eval $(~/.homebrew/bin/brew shellenv)
fi

brew update
brew upgrade

brew install \
  curl \
  gh \
  git \
  go \
  htop \
  neovim \
  node \
  pgformatter \
  python \
  rcm \
  ruby \
  terraform \
  tig \
  tmux \
  wabt \
  watch \
  zplug \
  zsh
