#!/bin/sh

set -e

if ! which brew; then
  curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh | bash
  eval $(brew shellenv)
fi

brew update
brew upgrade

brew install \
  automake \
  cmake \
  clang-format \
  comby \
  csvq \
  curl \
  deno \
  gh \
  git \
  go \
  htop \
  imagemagick \
  jq \
  koka \
  ldns \
  lua \
  luarocks \
  minimal-racket \
  neovim \
  node \
  pen-lang/pen/pen \
  pgformatter \
  python \
  rcm \
  ruby \
  sbcl \
  teaxyz/pkgs/tea-cli \
  terraform \
  tig \
  tmux \
  uutils-coreutils \
  uutils-findutils \
  wabt \
  wasmtime \
  watch \
  watchexec \
  yq \
  zig \
  zsh
