#!/bin/sh

set -e

if ! which brew; then
  curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh | bash
  eval $(brew shellenv)
fi

brew update
brew upgrade

brew install \
  agg \
  asciinema \
  automake \
  awscli \
  ccache \
  chezscheme \
  clang-format \
  cmake \
  colima \
  comby \
  csvq \
  curl \
  deno \
  docker \
  gauche \
  gh \
  git \
  gnupg \
  go \
  imagemagick \
  jj \
  jq \
  koka \
  ldns \
  lua \
  luarocks \
  make \
  mold \
  neovim \
  node \
  pen-lang/pen/pen \
  pgformatter \
  pipx \
  pkgxdev/made/pkgx \
  python \
  rcm \
  ruby \
  rustup \
  sbcl \
  sccache \
  terraform \
  tig \
  tmux \
  uutils-coreutils \
  uutils-findutils \
  wabt \
  watch \
  watchexec \
  yq \
  zig \
  zsh
