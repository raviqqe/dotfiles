#!/bin/sh

set -e

if ! which brew; then
  curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh | bash
  eval $(brew shellenv)
fi

brew update
brew upgrade

brew install \
  automake \
  awscli \
  ccache \
  chezscheme \
  clang-format \
  cmake \
  colima \
  comby \
  csvq \
  curl \
  deno \
  docker \
  gauche \
  gh \
  git \
  git-lfs \
  gnupg \
  go \
  jq \
  koka \
  ldns \
  lld \
  lua \
  lua-language-server \
  luarocks \
  make \
  minimal-racket \
  mold \
  neovim \
  node \
  pen-lang/pen/pen \
  python \
  rcm \
  ruby \
  rustup \
  sbcl \
  sccache \
  tmux \
  tree-sitter-cli \
  uutils-coreutils \
  uutils-diffutils \
  uutils-findutils \
  uv \
  virtualenv \
  wabt \
  watch \
  watchexec \
  yq \
  zsh
