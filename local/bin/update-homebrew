#!/bin/sh

set -e

if [ ! -d ~/.homebrew ]; then
  git clone https://github.com/Homebrew/brew ~/.homebrew
  eval $(~/.homebrew/bin/brew shellenv)
fi

brew update
brew upgrade

brew install \
  curl \
  elm-format \
  git \
  github/gh/gh \
  go \
  htop \
  ldns \
  neovim \
  node \
  ocaml \
  opam \
  pgformatter \
  python \
  ruby \
  terraform \
  thoughtbot/formulae/rcm \
  tig \
  tmux \
  wabt \
  watch \
  zplug \
  zsh

brew uninstall --force gobject-introspection pkg-config
