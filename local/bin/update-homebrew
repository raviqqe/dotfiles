#!/bin/sh

set -e

if [ ! -d ~/.homebrew ]; then
  git clone https://github.com/Homebrew/brew ~/.homebrew
  eval $(~/.homebrew/bin/brew shellenv)
fi

brew update
brew upgrade

brew install \
  clang-format \
  curl \
  gh \
  git \
  go \
  htop \
  ldns \
  lua \
  luarocks \
  neovim \
  node \
  nvm \
  pen-lang/pen/pen \
  pgformatter \
  python \
  rcm \
  ruby \
  rust-analyzer \
  terraform \
  tig \
  tmux \
  wabt \
  watch \
  yq \
  zig \
  zsh
