#!/bin/sh

set -e

export SSL_CERT_DIR=/etc/ssl/certs

if ! which rustup
then
  curl -sSf https://sh.rustup.rs |
  sh -s -- -y --no-modify-path --default-toolchain nightly
fi

rustup update

for package in cargo-update clippy exa fd-find racer ripgrep rustfmt tokei
do
  cargo install $package || :
done

cargo install-update -a

if [ -z "$RUST_SRC_PATH" ]
then
  exit 1
fi

repo="$(dirname "$RUST_SRC_PATH")"

rm -rf "$repo"
git clone --depth 1 https://github.com/rust-lang/rust "$repo"
