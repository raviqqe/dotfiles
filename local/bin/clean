#!/bin/sh

set -ex

pids=$(ps ax | grep -e tsserver -e eslint -e typescript-language-server | grep -v grep | awk '{ print $1 }')

if [ -n "$pids" ]; then
  kill $pids
fi

set -x

for directory in .rustup/downloads/* .rustup/tmp/* .cache/sccache; do
  rm -rf ~/$directory
done

brew cleanup -s --prune all
gem cleanup
npm cache clean --force
pnpm cache delete

if which yarn; then
  yarn cache clean
fi

pip3 cache purge || :
go clean -cache
