{
  "languageserver": {
    "typescript": {
      "command": "typescript-language-server",
      "args": ["--stdio"],
      "filetypes": [
        "typescript",
        "typescript.jsx",
        "typescript.tsx",
        "javascript",
        "javascript.jsx",
        "javascriptreact",
        "typescriptreact"
      ]
    },
    "golang": {
      "command": "go-langserver",
      "filetypes": ["go"],
      "initializationOptions": {
        "gocodeCompletionEnabled": true,
        "diagnosticsEnabled": true,
        "lintTool": "golint"
      }
    },
    "rust": { "command": "rls", "filetypes": ["rust"] }
  }
}
